[include]
	path = ~/.gitconfig.local

[alias]
	st = status
	ci = commit
	co = checkout
	w = whatchanged

[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = true
	pager = true

[color "branch"]
       current = yellow reverse
       local = yellow
       remote = green

[color "status"]
       added = yellow
       changed = green
       untracked = cyan

[core]
	page = less -FRSX
	whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol

[push]
	default = tracking
